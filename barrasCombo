<script type="text/javascript">
	var datos1990 = ["20","12","3","25","40","50","12","9","7","21","4","32"];
	var datos2010 = ["80","24","6","50","60","70","20","18","14","33","10","45"];
	var datos2030 = ["100","60","80","65","110","120","100","80","45","45","65","55"];
	var datos2050 = ["120","70","80","90","90","170","120","140","95","75","120","88"];
	
	
	
	function meterDatos (arrayDeDatos, anio){
		document.getElementById('titular').innerHTML= 'Datos del año ' + anio;
		
		for(i = 0; i <= arrayDeDatos.length; i++){
			var barra = document.getElementById('barra_'+i);
			barra.style.height = arrayDeDatos[i]+'px';
			barra.style.marginTop = (250 - arrayDeDatos[i]) + 'px';// con esto consigo que las barras se alineen abajo. Resto al alto del contenedor de las barras (que es 250) el alto de cada barra.
			document.getElementById('numeros_'+i).innerHTML = arrayDeDatos[i];//coloca los números dentro de las barras.
		}
		
	}
</script>
